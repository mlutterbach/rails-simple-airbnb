<div class="ratio" style="--bs-aspect-ratio: 30%;">
<img src="https://images.unsplash.com/photo-1493809842364-78817add7ffb?w=1200" class="img-fluid" alt="flat">
</div>
<div class="container negative-margin-top">
  <div class="row">
    <div class="col-8">
      <div class="card m-2">
        <div class="card-body">
          <h1><%= @flat.name %></h1>
          <h2><%= @flat.address %></h2>
        </div>
      </div>
      <div class="card m-2 p-2">
        <div class="card-body ratio" style="--bs-aspect-ratio: 70%;">
            <h2>A bit more about this flat...<%= @flat.description %></h2>
        </div>
      </div>
    </div>
    <div class="col-4">
      <div class="card m-2">
        <div class="card-body">
          <h5>Book this place!</h5>
          <form action="">
            <div class="input-group">
              <span class="input-group-text" id="basic-addon1">From:</span>
              <input type="text" class="form-control" placeholder="12/10/2017" aria-label="Username" aria-describedby="basic-addon1">
            </div>
            <div class="input-group mt-2">
              <span class="input-group-text" id="basic-addon1">To:</span>
              <input type="text" class="form-control" placeholder="18/10/2017" aria-label="Username" aria-describedby="basic-addon1">
            </div>
            <input type="submit" value="Book" class="btn btn-success mt-2" style="width: 100%">
          </form>
        </div>
      </div>
      <div class="card m-2">
        <div class="card-body">
          <h3>Details</h3>
          <div class="d-flex justify-content-sm-evenly">
            <div class="d-flex flex-fill">
              <i class="material-icons me-2">
              <i class="fa-solid fa-users"></i></i><%= @flat.number_of_guests %>
            </div>
            <div class="d-flex flex-fill">
              <i class="material-icons me-2">
              <i class="fa-solid fa-euro-sign"></i></i><%= @flat.price_per_night %>
            </div>
          </div>
        </div>
      </div>
      <div class="card m-2">
        <div class="flex-align card-body">
          <h3 class="no-mb">Share</h3>

          <div class="d-flex justify-content-sm-around">
            <i class="fa-brands fa-facebook-square fa-2x me-2"></i>
            <i class="fa-brands fa-twitter-square fa-2x me-2"></i>
            <i class="fa-brands fa-pinterest-square fa-2x me-2"></i>
            <i class="fa fa-envelope-square fa-2x"></i>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>


  <div class="container d-flex justify-content-around w-75 p-3">
    <%= link_to "Delete", flat_path(@flat), method: :delete,  data: { confirm: "Are you sure?" }, class: "btn btn-danger" %>
    <%# <%= link_to "Add a Review", new_flat_review_path(@flat), class: "btn btn-success" %>
    <%= link_to "All Flats", flats_path, class: "btn btn-primary" %>
    <%= link_to "Edit Flat", edit_flat_path, class: "btn btn-warning" %>
  </div>
